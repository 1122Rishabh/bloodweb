<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

  
<div class="container">
  <!-- Button to Open the Modal -->
  <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Open modal
  </button> -->

  <!-- The Modal -->
  <div class="modal" id="myModal">
    <div class="close" id="close_btn">&times;</div>
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
       
          <h4 class="modal-title" style="text-align:center;font-weight: bold;color: #271006;">Please Login First...</h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          <form  action="/login" method="POST">
            <div class="form-outline mb-4"style="color: #271006;font-weight: bold;">
              <label class="form-label" for="form2Example17">Email address</label>
              <input type="email" id="form2Example17" class="form-control form-control-lg" required name="email"/>
            </div>

            <div class="form-outline mb-4"style="color: #271006;font-weight: bold;">
              <label class="form-label" for="form2Example27">Password</label>

              <input type="password" id="form2Example27" class="form-control form-control-lg" required name="password" />
            </div>

            <div class="pt-1 mb-4"style="color: #271006;font-weight: bold;">
              <button class="btn btn-dark btn-lg btn-block" style="color: rgb(255, 72, 16);background-color: rgb(247, 194, 146);" type="submit">Login</button>
            </div>
            <!-- <a class="small text-muted" href="#!">Forgot password?</a> -->
                  <p class="mb-5 pb-lg-2" style="color: #271006;font-weight: bold;">Don't have an account? <a href="/Register"
                      style="color: rgb(255, 72, 16)">Register here</a></p>
                  <!-- <a href="#!" class="small text-muted">Terms of use.</a>
                  <a href="#!" class="small text-muted">Privacy policy</a> -->

        </form>
    
        </div>
      </div>
    </div>
  </div>

  <script>

